<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemBuylistName"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:text="Item"
        app:layout_constraintBottom_toTopOf="@+id/locationBuylistName"
        app:layout_constraintEnd_toStartOf="@+id/qttyBuylistName"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/locationBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:text="Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/priceBuylistName"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/qttyBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="88dp"
        android:text="Quantity"
        app:layout_constraintEnd_toStartOf="@+id/changeQttyBuylist"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/qttyBuylistEdit"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="80dp"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/changeQttyBuylist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:text="Full Price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/removeBuylist"
        app:layout_constraintTop_toBottomOf="@+id/qttyBuylistName"
        app:layout_constraintVertical_bias="0.676" />

    <Button
        android:id="@+id/changeQttyBuylist"
        android:layout_width="42dp"
        android:layout_height="51dp"
        android:layout_marginEnd="40dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/removeBuylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/removeBuylist"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>