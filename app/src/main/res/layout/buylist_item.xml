<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemBuylistName"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:layout_marginStart="76dp"
        android:text="Item"
        app:layout_constraintBottom_toTopOf="@+id/locationBuylistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="640dp"
        android:text="Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/priceBuylistName"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/qttyBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        app:layout_constraintBottom_toTopOf="@+id/priceBuylistName"
        app:layout_constraintEnd_toStartOf="@+id/changePriceBuylist"
        app:layout_constraintStart_toEndOf="@+id/itemBuylistName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceBuylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="640dp"
        android:text="Full Price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/removeBuylist" />

    <Button
        android:id="@+id/changePriceBuylist"
        android:layout_width="42dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/removeBuylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/removeBuylist"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_marginEnd="28dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="78dp" />
</androidx.constraintlayout.widget.ConstraintLayout>