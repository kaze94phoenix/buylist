<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemBuylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/priceBuylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:text="Price"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/itemBuylist"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/locationBuylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:text="Location"
        android:layout_alignParentStart="true"
        android:layout_below="@id/itemBuylist"
        />

    <TextView
        android:id="@+id/qttyAddBuyListLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/locationBuylist"
        android:layout_below="@id/priceBuylist"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="Quantity"/>

    <EditText
        android:id="@+id/qttyAddBuylistText"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/priceBuylist"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@id/qttyAddBuyListLabel"
        android:layout_marginStart="25dp"
        />

    <CheckBox
        android:id="@+id/checkBoxBuylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        />




</RelativeLayout>