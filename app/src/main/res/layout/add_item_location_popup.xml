<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddItemActivity">

    <TextView
        android:id="@+id/itemPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        />


    <EditText
        android:id="@+id/itemPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemPriceLabel"
        android:layout_marginStart="50dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPriceTxt"
        android:layout_marginStart="50dp"
        android:layout_marginTop="34dp"
        android:text="Location" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationLabel"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"

        />

    <Button
        android:id="@+id/goAddLocation"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_below="@id/locationLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="264dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:onClick="goToAddItemType"
        android:text="+" />

    <Button
        android:id="@+id/btnSaveItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationSpinner"
        android:layout_marginStart="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="78dp"
        android:text="Save" />

    <Button
        android:id="@+id/btnCancelItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationSpinner"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/btnSaveItemLocation"
        android:text="Cancel" />


</RelativeLayout>